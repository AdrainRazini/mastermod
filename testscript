-- Cria a GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "MenuGUI"
ScreenGui.Parent = game.CoreGui

-- Cria o Frame principal do Menu
local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Size = UDim2.new(0, 300, 0, 400) -- tamanho do frame
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -200) -- posição central na tela
MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
MainFrame.BorderSizePixel = 0
MainFrame.Parent = ScreenGui

-- Cria o título do Menu
local Title = Instance.new("TextLabel")
Title.Name = "Title"
Title.Size = UDim2.new(1, 0, 0, 50)
Title.BackgroundTransparency = 1
Title.Text = "Menu Principal"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 24
Title.Parent = MainFrame

-- Cria um botão para cada funcionalidade
local function createButton(name, text, positionY, callback)
    local Button = Instance.new("TextButton")
    Button.Name = name
    Button.Size = UDim2.new(1, -20, 0, 50)
    Button.Position = UDim2.new(0, 10, 0, positionY)
    Button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    Button.TextColor3 = Color3.fromRGB(255, 255, 255)
    Button.Font = Enum.Font.SourceSansBold
    Button.TextSize = 18
    Button.Text = text
    Button.Parent = MainFrame
    Button.MouseButton1Click:Connect(callback)
end

-- Função de callback de exemplo
local function onExecuteScript()
    print("Executando Script...")
    -- Insira o código do script que você quer executar aqui
end

local function onOpenSettings()
    print("Abrindo Configurações...")
    -- Código para abrir configurações
end

local function onCloseMenu()
    ScreenGui:Destroy()
end

-- Cria os botões com as funções de callback associadas
createButton("ExecuteButton", "Executar Script", 70, onExecuteScript)
createButton("SettingsButton", "Configurações", 130, onOpenSettings)
createButton("CloseButton", "Fechar Menu", 190, onCloseMenu)

-- Opções adicionais: Animação de abertura do Menu (opcional)
MainFrame.Position = UDim2.new(0.5, -150, 1, 0)
MainFrame:TweenPosition(UDim2.new(0.5, -150, 0.5, -200), "Out", "Bounce", 1, true)
