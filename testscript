local player = game.Players.LocalPlayer
local tool = Instance.new("Tool")
tool.Name = "MusicTool"
tool.RequiresHandle = false
tool.Parent = player.Backpack

-- GUI para o ID da música
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 150)
frame.Position = UDim2.new(0.5, -150, 0.5, -75)
frame.BackgroundColor3 = Color3.new(0, 0, 0)
frame.Visible = false
frame.Parent = screenGui

local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, 0, 0, 40)
label.Text = "Digite o ID da Música:"
label.TextColor3 = Color3.new(1, 1, 1)
label.TextSize = 20
label.Parent = frame

local textBox = Instance.new("TextBox")
textBox.Size = UDim2.new(1, -20, 0, 40)
textBox.Position = UDim2.new(0, 10, 0, 50)
textBox.PlaceholderText = "ID da Música"
textBox.TextColor3 = Color3.new(1, 1, 1)
textBox.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
textBox.Parent = frame

local playButton = Instance.new("TextButton")
playButton.Size = UDim2.new(1, -20, 0, 40)
playButton.Position = UDim2.new(0, 10, 0, 100)
playButton.Text = "Tocar Música"
playButton.TextColor3 = Color3.new(1, 1, 1)
playButton.BackgroundColor3 = Color3.new(0.2, 0.5, 0.2)
playButton.Parent = frame

-- Variáveis para música
local music
local soundService = game:GetService("SoundService")

-- Função para equipar a ferramenta
tool.Equipped:Connect(function()
    frame.Visible = true
end)

-- Função para desequipar a ferramenta
tool.Unequipped:Connect(function()
    frame.Visible = false
    if music then
        music:Stop()
    end
end)

-- Função para tocar a música
playButton.MouseButton1Click:Connect(function()
    local musicId = textBox.Text
    if musicId ~= "" then
        -- Parar a música anterior, se houver
        if music then
            music:Stop()
        end
        -- Criar o objeto de música
        music = Instance.new("Sound")
        music.SoundId = "rbxassetid://" .. musicId
        music.Parent = soundService
        music:Play()
    else
        print("ID inválido de música!")
    end
end)

