local player = game.Players.LocalPlayer
local mouse = player:GetMouse()

-- Criar GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:FindFirstChild("PlayerGui") or player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 250, 0, 200)
frame.Position = UDim2.new(0.2, 0, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true -- Torna toda a frame arrastável
frame.Parent = screenGui

-- Área de rolagem
local scrollFrame = Instance.new("ScrollingFrame")
scrollFrame.Size = UDim2.new(1, 0, 0.5, 0)
scrollFrame.Position = UDim2.new(0, 0, 0.3, 0)
scrollFrame.BackgroundTransparency = 1
scrollFrame.CanvasSize = UDim2.new(0, 0, 3, 0)
scrollFrame.ScrollBarThickness = 5
scrollFrame.Parent = frame

-- Botão para salvar local
local saveButton = Instance.new("TextButton")
saveButton.Size = UDim2.new(0.4, 0, 0.2, 0)
saveButton.Position = UDim2.new(0.05, 0, 0.05, 0)
saveButton.Text = "Salvar"
saveButton.BackgroundColor3 = Color3.fromRGB(80, 150, 80)
saveButton.TextColor3 = Color3.fromRGB(255, 255, 255)
saveButton.Parent = frame

-- Caixa de texto para nomear o local
local nameBox = Instance.new("TextBox")
nameBox.Size = UDim2.new(0.5, 0, 0.2, 0)
nameBox.Position = UDim2.new(0.5, 0, 0.05, 0)
nameBox.PlaceholderText = "Nome do local"
nameBox.TextColor3 = Color3.fromRGB(255, 255, 255)
nameBox.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
nameBox.Parent = frame

local savedLocations = {} -- Tabela para armazenar locais

-- Função para salvar local
saveButton.MouseButton1Click:Connect(function()
    local name = nameBox.Text
    if name ~= "" and player.Character then
        local pos = player.Character.PrimaryPart.Position
        savedLocations[name] = pos
        
        -- Criar botão na rolagem
        local locButton = Instance.new("TextButton")
        locButton.Size = UDim2.new(1, 0, 0, 30)
        locButton.Text = name
        locButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
        locButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        locButton.Parent = scrollFrame
        
        -- Teleportar ao clicar
        locButton.MouseButton1Click:Connect(function()
            if savedLocations[name] then
                player.Character:SetPrimaryPartCFrame(CFrame.new(savedLocations[name]))
            end
        end)
        
        -- Botão para deletar local
        local deleteButton = Instance.new("TextButton")
        deleteButton.Size = UDim2.new(0, 30, 1, 0)
        deleteButton.Position = UDim2.new(0.9, 0, 0, 0)
        deleteButton.Text = "X"
        deleteButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
        deleteButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        deleteButton.Parent = locButton
        
        deleteButton.MouseButton1Click:Connect(function()
            savedLocations[name] = nil
            locButton:Destroy()
        end)
    end
end)
