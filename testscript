local player = game.Players.LocalPlayer
local userInputService = game:GetService("UserInputService")

-- Criação da interface gráfica
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")
screenGui.Enabled = true

-- Criação do menu
local menuFrame = Instance.new("Frame")
menuFrame.Size = UDim2.new(0, 300, 0, 400)  -- Tamanho do menu
menuFrame.Position = UDim2.new(0.5, -150, 0.5, -200)  -- Posição do menu no centro da tela
menuFrame.BackgroundColor3 = Color3.new(0.1, 0.1, 0.1)
menuFrame.Parent = screenGui

-- Título do menu
local titleFrame = Instance.new("Frame")
titleFrame.Size = UDim2.new(1, 0, 0, 50)
titleFrame.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
titleFrame.Parent = menuFrame

-- Aqui criamos tanto o TextButton quanto o ImageButton para alternar entre eles
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(0.9, 0, 1, 0)
titleLabel.Text = "MASTERMOD"
titleLabel.TextColor3 = Color3.new(1, 1, 1)
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextSize = 24
titleLabel.BackgroundTransparency = 1
titleLabel.Parent = titleFrame

local minimizeButtonText = Instance.new("TextButton")
minimizeButtonText.Size = UDim2.new(0.2, 0, 0.2, 0)
minimizeButtonText.Position = UDim2.new(0.9, 0, 0, 0)
minimizeButtonText.Text = "-"
minimizeButtonText.TextColor3 = Color3.new(1, 1, 1)
minimizeButtonText.BackgroundColor3 = Color3.new(0.3, 0.3, 0.3)
minimizeButtonText.Font = Enum.Font.SourceSans
minimizeButtonText.TextSize = 24
minimizeButtonText.Parent = titleFrame

local minimizeButtonImage = Instance.new("ImageButton")
minimizeButtonImage.Size = UDim2.new(0.2, 0, 0.2, 0)
minimizeButtonImage.Position = UDim2.new(0.9, 0, 0, 0)
minimizeButtonImage.Image = "http://www.roblox.com/asset/?id=125503842985497"  -- Coloque aqui o ID da imagem
minimizeButtonImage.BackgroundTransparency = 1
minimizeButtonImage.BorderSizePixel = 0
minimizeButtonImage.Parent = titleFrame

-- Esconde a imagem inicialmente
minimizeButtonImage.Visible = false

-- Botão de alternância entre minimizar/restaurar
local isMinimized = false

local function toggleMenu()
    if isMinimized then
        -- Restaura o menu
        menuFrame.Size = UDim2.new(0, 300, 0, 400)  -- Tamanho original
        scrollingFrame.Visible = true  -- Torna o ScrollingFrame visível
        minimizeButtonText.Visible = true  -- Exibe o TextButton
        minimizeButtonImage.Visible = false  -- Esconde a ImageButton
    else
        -- Minimiza o menu
        menuFrame.Size = UDim2.new(0, 150, 0, 60)  -- Tamanho minimizado
        scrollingFrame.Visible = false  -- Torna o ScrollingFrame invisível
        minimizeButtonText.Visible = false  -- Esconde o TextButton
        minimizeButtonImage.Visible = true  -- Exibe a ImageButton
    end
    isMinimized = not isMinimized
end

minimizeButtonText.MouseButton1Click:Connect(toggleMenu)  -- Clique no botão de texto para minimizar/restaurar
minimizeButtonImage.MouseButton1Click:Connect(toggleMenu)  -- Clique na imagem para minimizar/restaurar

-- Criação do ScrollingFrame para os botões
local scrollingFrame = Instance.new("ScrollingFrame")
scrollingFrame.Size = UDim2.new(1, 0, 1, -60)
scrollingFrame.Position = UDim2.new(0, 0, 0, 50)
scrollingFrame.BackgroundColor3 = Color3.new(0.15, 0.15, 0.15)
scrollingFrame.ScrollBarThickness = 10
scrollingFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
scrollingFrame.Parent = menuFrame

local uiListLayout = Instance.new("UIListLayout")
uiListLayout.Padding = UDim.new(0, 10)
uiListLayout.Parent = scrollingFrame

local dragging, dragStart, startPos

local function updatePosition(input)
    local delta = input.Position - dragStart
    menuFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

menuFrame.InputBegan:Connect(function(input)
    if (input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch) then
        dragging = true
        dragStart = input.Position
        startPos = menuFrame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

userInputService.InputChanged:Connect(function(input)
    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        updatePosition(input)
    end
end)

-- Função para criar botões no menu
local function createButton(name, activateCallback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -20, 0, 50)
    button.Text = name
    button.TextColor3 = Color3.new(1, 1, 1)
    button.BackgroundColor3 = Color3.new(0.3, 0.3, 0.3)
    button.BorderSizePixel = 0
    button.Font = Enum.Font.SourceSans
    button.TextSize = 20
    button.Parent = scrollingFrame

    button.MouseButton1Click:Connect(function()
        activateCallback()
        button.BackgroundColor3 = Color3.new(0.5, 1, 0.5)
        wait(0.5)
        button.BackgroundColor3 = Color3.new(0.3, 0.3, 0.3)
    end)

    -- Atualiza o CanvasSize para garantir rolagem
    scrollingFrame.CanvasSize = UDim2.new(0, 0, 0, scrollingFrame.UIListLayout.AbsoluteContentSize.Y)
end

-- Criando alguns botões de exemplo
createButton("INVENTÁRIO", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/AdrainRazini/mastermod/refs/heads/main/inventario.lua"))()
end)

-- Alternar visibilidade com a tecla 'M'
userInputService.InputBegan:Connect(function(input, gameProcessedEvent)
    if not gameProcessedEvent and input.KeyCode == Enum.KeyCode.M then
        toggleMenu()  -- Chama a função diretamente
    end
end)
