local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
local tweenService = game:GetService("TweenService")

-- Função para obter as coordenadas de objetos chamados "Chest" ou "Coin"
local function getObjectCoordinates()
    local coordinates = {}

    -- Procurar por objetos chamados "Chest" ou "Coin" em todo o jogo
    for _, object in pairs(workspace:GetDescendants()) do
        if object:IsA("BasePart") and (object.Name == "Chest" or object.Name == "Coin") then
            -- Adiciona a coordenada do objeto à tabela
            table.insert(coordinates, object.Position)
        end
    end

    return coordinates
end

-- Função para teletransportar o jogador com animação (usando Tween)
local function teleportToNextCoordinate(coordinates, currentIndex)
    local targetPosition = coordinates[currentIndex]

    -- Criar o CFrame para a nova posição
    local targetCFrame = CFrame.new(targetPosition)

    -- Criar a animação de teleporte
    local tweenInfo = TweenInfo.new(1, Enum.EasingStyle.Quint, Enum.EasingDirection.Out)  -- 1 segundo para animação suave
    local goal = {CFrame = targetCFrame}  -- Objetivo de teleporte é o CFrame da nova posição
    local tween = tweenService:Create(humanoidRootPart, tweenInfo, goal)

    -- Inicia a animação de teleporte
    tween:Play()

    -- Atualiza o índice para a próxima coordenada
    currentIndex = currentIndex + 1

    -- Se atingir o final da lista, volta para o começo
    if currentIndex > #coordinates then
        currentIndex = 1
    end

    return currentIndex
end

-- Atualiza a lista de coordenadas periodicamente e teletransporta o jogador
local currentIndex = 1
while true do
    -- Obtém a lista atualizada de coordenadas
    local coordinates = getObjectCoordinates()

    -- Verifica se há objetos encontrados
    if #coordinates == 0 then
        print("Nenhum objeto 'Chest' ou 'Coin' encontrado no jogo.")
    else
        -- Teletransporta o jogador para a próxima coordenada
        currentIndex = teleportToNextCoordinate(coordinates, currentIndex)
    end

    wait(0.5)  -- Aguarda 0.5 segundos antes de atualizar as coordenadas e teletransportar novamente
end
