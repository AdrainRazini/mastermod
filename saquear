-- ðŸ§  Estado
local autoFarmAtivo = false
local partidaAtiva = false
local pontosDeFarm = {}
local pastaNpcs = workspace:WaitForChild("EnemyFolder")

-- ðŸŽ¨ GUI
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
