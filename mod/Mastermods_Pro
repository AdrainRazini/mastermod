--========= Extra√ß√£o de NPCs Ou Jogadores =========--
local Characters = workspace
local Npcs_List = {}

-- Fun√ß√£o recursiva para procurar NPCs
local function findNPCs(parent)
	for _, child in ipairs(parent:GetChildren()) do
		if child:IsA("Model") then
			local humanoid = child:FindFirstChildOfClass("Humanoid")
			if humanoid then
				table.insert(Npcs_List, child)
			end
		end
		-- Continua a busca nos filhos
		findNPCs(child)
	end
end

-- Inicia a busca a partir do Characters
findNPCs(Characters)

-- Exibe nomes dos NPCs encontrados
for _, npc in ipairs(Npcs_List) do
	print("NPC encontrado:", npc.Name)
end


