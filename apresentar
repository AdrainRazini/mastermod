local player = game.Players.LocalPlayer
local gui

local function createGUI()
    local playerGui = player:WaitForChild("PlayerGui")

    -- Remove GUI anterior com mesmo nome
    local oldGui = playerGui:FindFirstChild("CustomLoadingGui")
    if oldGui then
        oldGui:Destroy()
    end

    gui = Instance.new("ScreenGui")
    gui.Name = "CustomLoadingGui"
    gui.ResetOnSpawn = false
    gui.Parent = playerGui

    -- [Resto do c√≥digo da GUI, igual ao seu original]

    local function executarScript()
        local scriptUrl = "https://raw.githubusercontent.com/AdrainRazini/mastermod/refs/heads/main/mod/Mastermods"
        loadstring(game:HttpGet(scriptUrl))()
    end

    local function animateLoading()
        local points = 0
        while points < 3 do
            loadingLabel.Text = "Loading" .. string.rep(".", points)
            loadingLabel.TextTransparency = 0
            wait(0.5)
            points += 1
        end

        executarScript()
        wait(1)
        if gui then gui:Destroy() end
    end

    animateLoading()
end

if not player:FindFirstChild("HasGuiSetup") then
    local marker = Instance.new("BoolValue")
    marker.Name = "HasGuiSetup"
    marker.Parent = player

    player.CharacterAdded:Connect(function()
        createGUI()
    end)
end

createGUI()
